>> import dash
from dash import dcc, html, dash_table
import pandas as pd
import plotly.express as px


df = pd.read_excel("C:\Users\punky\Desktop\BDD AGL.xlsx")
fig = px.line(df, x='Date', y='Price', title="Évolution du prix de l'Ethereum")


app = dash.Dash(__name__)

app.layout = html.Div([
    html.H1("Dashboard des Informations"),
    html.Div("Ce dashboard présente les données extraites du fichier Excel."),

    dcc.Graph(
        id='graphique',
        figure=fig
    ),

    dash_table.DataTable(
        id='tableau',
        columns=[{"name": col, "id": col} for col in df.columns],
        data=df.to_dict('records'),
        page_size=10,
        style_table={'overflowX': 'auto'},
        style_cell={'textAlign': 'left', 'padding': '5px'},
        style_header={
            'backgroundColor': 'lightgrey',
            'fontWeight': 'bold'
        }
    )
])

if __name__ == '__main__':
    app.run(debug=True)
